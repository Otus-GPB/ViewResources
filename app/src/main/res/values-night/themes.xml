<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ViewResources" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/status_bar</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.ViewResources1" parent="Theme.ViewResources">
        <!-- Customize your theme here. -->
        <item name="actionBarStyle">@style/ActionBarSecond</item>
    </style>

    <style name="ActionBarSecond" parent="Widget.MaterialComponents.ActionBar.Solid">
        <item name="background">@color/action_bar</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSizeImage" parent="">
        <item name="cornerSize">5%</item>
    </style>

    <style name="ContactsInputDrop" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu" >
        <!-- underline color in FilledBox style -->
        <item name="boxStrokeColor">@color/contacts_edit_color</item>
        <item name="android:textColorHint">@color/main_color</item>
        <item name="android:textColor">@color/main_color</item>
        <item name="endIconTint">@color/icons_color</item>
        <item name="boxCornerRadiusTopEnd">4dp</item>
        <item name="boxCornerRadiusTopStart">4dp</item>
    </style>
</resources>