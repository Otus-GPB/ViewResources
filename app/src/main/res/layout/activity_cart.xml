<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CartActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar_cart"
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize"
        android:gravity="center_vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:menu="@menu/menu_order"
        app:navigationIcon="@drawable/img_toolbar_left"
        app:title="@string/cart_activity"
        app:titleTextAppearance="@style/header" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="16dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="16dp" />

    <TextView
        style="@style/myThemeCartCart_itemsIncart"
        android:id="@+id/text_userCart"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toStartOf="@id/guideline_end"
        app:layout_constraintStart_toEndOf="@+id/guideline_start"
        app:layout_constraintTop_toBottomOf="@id/toolbar_cart"
        android:textAppearance="@style/body2letter02"
        tools:text="...items in cart" />

    <ListView
        android:id="@+id/list_userOrder"
        android:divider="@null"
        android:layout_width="0dp"
        android:layout_height="300dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toStartOf="@id/guideline_end"
        app:layout_constraintStart_toEndOf="@+id/guideline_start"
        app:layout_constraintTop_toBottomOf="@id/text_userCart" />

    <ImageView
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="5dp"
        android:layerType="software"
        android:src="@drawable/cart_divider"
        app:layout_constraintEnd_toEndOf="@id/guideline_end"
        app:layout_constraintStart_toStartOf="@id/guideline_start"
        app:layout_constraintTop_toBottomOf="@id/list_userOrder" />

    <TextView
        style="@style/myThemeCartOrderTotalText"
        android:id="@+id/order_total"
        android:textAppearance="@style/header"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:gravity="top"
        android:lineSpacingExtra="5sp"
        android:text="@string/order_total"
        app:layout_constraintEnd_toStartOf="@id/cost_total"
        app:layout_constraintStart_toStartOf="@id/guideline_start"
        app:layout_constraintTop_toBottomOf="@id/divider" />

    <TextView
        style="@style/myThemeCartOrderTotalText"
        android:id="@+id/cost_total"
        android:textAppearance="@style/header"
        android:layout_width="72dp"
        android:layout_height="32dp"
        android:layout_marginBottom="184dp"
        android:gravity="end|top"
        android:lineSpacingExtra="5sp"
        android:translationY="-2.28sp"
        app:layout_constraintEnd_toEndOf="@id/guideline_end"
        app:layout_constraintStart_toEndOf="@id/order_total"
        app:layout_constraintTop_toTopOf="@id/order_total"
        android:text="@string/order_totalvalues" />

    <TextView
        android:id="@+id/value_items"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:gravity="top"
        android:lineSpacingExtra="5sp"
        android:text="@string/order_plus"
        android:translationY="-2.62sp"
        app:layout_constraintEnd_toEndOf="@id/order_total"
        app:layout_constraintStart_toStartOf="@id/guideline_start"
        app:layout_constraintTop_toBottomOf="@id/order_total"
        android:textAppearance="@style/body1" />

    <TextView
        android:id="@+id/value"
        android:textAppearance="@style/body1"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginStart="8dp"
        android:gravity="end|top"
        android:lineSpacingExtra="5sp"
        android:text="@string/order_values"
        android:translationY="-2.62sp"
        app:layout_constraintEnd_toEndOf="@id/guideline_end"
        app:layout_constraintStart_toEndOf="@id/value_items"
        app:layout_constraintTop_toTopOf="@id/value_items" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/extended_fab"
        android:layout_width="154dp"
        android:layout_height="56dp"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:contentDescription="@string/pay_now"
        android:text="@string/pay_now"
        android:textAppearance="@style/header"
        app:icon="@drawable/cart_icon_paynow"
        app:iconPadding="11dp"
        style="@style/myButtonStyleCart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/guideline_end"
        app:layout_constraintStart_toEndOf="@id/guideline_start" />
</androidx.constraintlayout.widget.ConstraintLayout>
