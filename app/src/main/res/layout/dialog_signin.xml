<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="155dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:lineSpacingExtra="5sp"
            android:paddingVertical="18dp"
            android:paddingStart="24dp"
            android:paddingEnd="12dp"
            android:text="@string/dialog_title"
            android:textAppearance="@style/dialog_title" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/register_button"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end|center_vertical"
            android:lineSpacingExtra="5sp"
            android:paddingEnd="20dp"
            android:text="@string/dialog_register"
            android:textAppearance="@style/dialog_register"
            android:textColor="#2980B9"
            app:strokeWidth="0dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layout_email"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:lineSpacingExtra="5sp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/text_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/dialog_email"
                android:inputType="textPersonName"
                android:text="@string/dialog_emailtext"
                android:textAppearance="@style/email_text" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layout_password"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:lineSpacingExtra="5sp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/text_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/dialog_password"
                android:inputType="textPersonName"
                android:text="@string/dialog_textpassword"
                android:textAppearance="@style/dialog_username_password" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/reset_email"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_gravity="end"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:text="@string/dialog_resetpassword"
            android:textAppearance="@style/dialog_reset_password" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_enter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="28dp"
            android:background="@drawable/dialog_imagebutton"
            android:text="@string/dialog_button_enter"
            android:textAppearance="@style/dialog_enterbutton" />
    </LinearLayout>

</LinearLayout>