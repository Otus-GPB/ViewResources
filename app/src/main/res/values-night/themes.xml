<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ViewResources" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/cod_gray</item>
        <item name="colorPrimaryVariant">@color/cod_gray</item>
        <item name="colorOnPrimary">@color/alto</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/malibu</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/alto</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="iconColor">@color/gray</item>
        <item name="errorColor">@color/gray</item>
        <item name="backgroundTint">@color/mine_shaft</item>
        <item name="textButtonColor">@color/cod_gray</item>
        <item name="subTitleColor">@color/conifer</item>
        <item name="titleColor">@color/kournikova</item>
        <item name="buttonIconColor">@color/cod_gray</item>
        <item name="labelTextColor">@color/malibu</item>
        <item name="subLabelTextColor">@color/gray</item>
    </style>


</resources>