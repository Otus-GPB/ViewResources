<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ViewResources" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">?attr/primaryColor</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/backgroundColor</item>
        <!-- Customize your theme here. -->
        <item name="backgroundColor">@color/black</item>
        <item name="mainColor">@color/white_gainsboro</item>
        <item name="accentColor">@color/orange_crusta</item>
        <item name="primaryColor">@color/blue_maya</item>
        <item name="secondaryColor">@color/green_conifer</item>
        <item name="tretiaryColor">@color/yellow_grandis</item>
        <item name="iconColor">@color/grey_suva</item>
        <item name="shadeColor">@color/grey_nero</item>

        <item name="actionbarIconColor">?attr/iconColor</item>
        <!-- contacts activity -->
        <item name="contactsButtonColor">?attr/primaryColor</item>
        <!-- cart activity -->
        <item name="cartButtonColor">?attr/secondaryColor</item>
        <item name="cartButtonIconColor">?attr/backgroundColor</item>
        <item name="cartCheckHeaderColor">?attr/tretiaryColor</item>
        <item name="cartDeleteItemColor">?attr/iconColor</item>
        <item name="cartHeaderCountColor">?attr/secondaryColor</item>
        <!-- cart activity -->
        <item name="signResetColor">?attr/mainColor</item>
    </style>

    <style name="Theme.ViewResources1" parent="Theme.ViewResources">
        <!-- Customize your theme here. -->
        <item name="actionBarStyle">@style/ActionBarSecond</item>
    </style>

    <style name="ActionBarSecond" parent="Widget.MaterialComponents.ActionBar.Solid">
        <item name="background">?attr/shadeColor</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSizeImage" parent="">
        <item name="cornerSize">5%</item>
    </style>
</resources>