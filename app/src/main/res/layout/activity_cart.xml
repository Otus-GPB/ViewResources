<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CartActivity">

    <TextView
        android:id="@+id/text_count_items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_medium"
        android:text="@string/text_cart_items_counter"
        android:textAlignment="textStart"
        android:textAppearance="@style/TextAppearance.Theme.GPB.Body2"
        android:textColor="@color/primary_dark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/dimen_medium"
        android:layout_marginBottom="@dimen/dimen_medium"
        app:layout_constraintBottom_toTopOf="@id/divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_count_items">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/image_item1"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginTop="12dp"
                android:background="@color/primary_dark"
                android:scaleType="centerCrop"
                android:src="@drawable/img_raspberry"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSizeImage" />

            <TextView
                android:id="@+id/text_item_title1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_medium"
                android:text="@string/text_item_1"
                android:textAlignment="textStart"
                android:textAppearance="@style/TextAppearance.Theme.GPB.Body1"
                android:textColor="@color/primary_dark"
                app:layout_constraintBottom_toTopOf="@id/text_item_subtitle1"
                app:layout_constraintEnd_toStartOf="@+id/text_item_price1"
                app:layout_constraintStart_toEndOf="@id/image_item1"
                app:layout_constraintTop_toTopOf="@id/image_item1"
                app:layout_constraintVertical_chainStyle="packed" />

            <TextView
                android:id="@+id/text_item_subtitle1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_caption"
                android:textAppearance="@style/TextAppearance.Theme.GPB.Caption"
                android:textColor="@color/primary_dark"
                app:layout_constraintBottom_toBottomOf="@id/image_item1"
                app:layout_constraintStart_toStartOf="@+id/text_item_title1"
                app:layout_constraintTop_toBottomOf="@id/text_item_title1" />

            <TextView
                android:id="@+id/text_item_price1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_medium"
                android:text="@string/text_item_price_1"
                android:textAppearance="@style/TextAppearance.Theme.GPB.Body1"
                android:textColor="@color/primary_dark"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/text_item_title1"
                app:layout_constraintVertical_chainStyle="packed" />

            <ImageView
                android:layout_width="@dimen/dimen_small_icon_button"
                android:layout_height="@dimen/dimen_small_icon_button"
                android:src="@drawable/ic_baseline_close_24"
                app:layout_constraintBottom_toBottomOf="@id/text_item_subtitle1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/text_item_subtitle1"
                app:tint="@color/warning" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/image_item2"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginTop="32dp"
                android:background="@color/primary_dark"
                android:scaleType="centerCrop"
                android:src="@drawable/img_cakes"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/image_item1"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSizeImage" />

            <TextView
                android:id="@+id/text_item_title2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_medium"
                android:text="@string/text_item_2"
                android:textAlignment="textStart"
                android:textAppearance="@style/TextAppearance.Theme.GPB.Body1"
                android:textColor="@color/primary_dark"
                app:layout_constraintBottom_toTopOf="@id/text_item_subtitle2"
                app:layout_constraintEnd_toStartOf="@+id/text_item_price2"
                app:layout_constraintStart_toEndOf="@id/image_item2"
                app:layout_constraintTop_toTopOf="@id/image_item2"
                app:layout_constraintVertical_chainStyle="packed" />

            <TextView
                android:id="@+id/text_item_subtitle2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_caption"
                android:textAppearance="@style/TextAppearance.Theme.GPB.Caption"
                android:textColor="@color/primary_dark"
                app:layout_constraintBottom_toBottomOf="@id/image_item2"
                app:layout_constraintStart_toStartOf="@+id/text_item_title2"
                app:layout_constraintTop_toBottomOf="@id/text_item_title2" />

            <TextView
                android:id="@+id/text_item_price2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_medium"
                android:text="@string/text_item_price_2"
                android:textAppearance="@style/TextAppearance.Theme.GPB.Body1"
                android:textColor="@color/primary_dark"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/text_item_title2"
                app:layout_constraintVertical_chainStyle="packed" />

            <ImageView
                android:layout_width="@dimen/dimen_small_icon_button"
                android:layout_height="@dimen/dimen_small_icon_button"
                android:src="@drawable/ic_baseline_close_24"
                app:layout_constraintBottom_toBottomOf="@id/text_item_subtitle2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/text_item_subtitle2"
                app:tint="@color/warning" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/image_item3"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginTop="32dp"
                android:background="@color/primary_dark"
                android:scaleType="centerCrop"
                android:src="@drawable/img_alarm_clock"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/image_item2"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSizeImage" />

            <TextView
                android:id="@+id/text_item_title3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_medium"
                android:text="@string/text_item_3"
                android:textAlignment="textStart"
                android:textAppearance="@style/TextAppearance.Theme.GPB.Body1"
                android:textColor="@color/primary_dark"
                app:layout_constraintBottom_toTopOf="@id/text_item_subtitle3"
                app:layout_constraintEnd_toStartOf="@+id/text_item_price3"
                app:layout_constraintStart_toEndOf="@id/image_item3"
                app:layout_constraintTop_toTopOf="@id/image_item3"
                app:layout_constraintVertical_chainStyle="packed" />

            <TextView
                android:id="@+id/text_item_subtitle3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_caption"
                android:textAppearance="@style/TextAppearance.Theme.GPB.Caption"
                android:textColor="@color/primary_dark"
                app:layout_constraintBottom_toBottomOf="@id/image_item3"
                app:layout_constraintStart_toStartOf="@+id/text_item_title3"
                app:layout_constraintTop_toBottomOf="@id/text_item_title3" />

            <TextView
                android:id="@+id/text_item_price3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_medium"
                android:text="@string/text_item_price_3"
                android:textAppearance="@style/TextAppearance.Theme.GPB.Body1"
                android:textColor="@color/primary_dark"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/text_item_title3"
                app:layout_constraintVertical_chainStyle="packed" />

            <ImageView
                android:layout_width="@dimen/dimen_small_icon_button"
                android:layout_height="@dimen/dimen_small_icon_button"
                android:src="@drawable/ic_baseline_close_24"
                app:layout_constraintBottom_toBottomOf="@id/text_item_subtitle3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/text_item_subtitle3"
                app:tint="@color/warning" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/image_item4"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginTop="32dp"
                android:background="@color/primary_dark"
                android:scaleType="centerCrop"
                android:src="@drawable/img_forever_friends"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/image_item3"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSizeImage" />

            <TextView
                android:id="@+id/text_item_title4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_medium"
                android:text="@string/text_item_4"
                android:textAlignment="textStart"
                android:textAppearance="@style/TextAppearance.Theme.GPB.Body1"
                android:textColor="@color/primary_dark"
                app:layout_constraintBottom_toTopOf="@id/text_item_subtitle4"
                app:layout_constraintEnd_toStartOf="@+id/text_item_price4"
                app:layout_constraintStart_toEndOf="@id/image_item4"
                app:layout_constraintTop_toTopOf="@id/image_item4"
                app:layout_constraintVertical_chainStyle="packed" />

            <TextView
                android:id="@+id/text_item_subtitle4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_caption"
                android:textAppearance="@style/TextAppearance.Theme.GPB.Caption"
                android:textColor="@color/primary_dark"
                app:layout_constraintBottom_toBottomOf="@id/image_item4"
                app:layout_constraintStart_toStartOf="@+id/text_item_title4"
                app:layout_constraintTop_toBottomOf="@id/text_item_title4" />

            <TextView
                android:id="@+id/text_item_price4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_medium"
                android:text="@string/text_item_price_4"
                android:textAppearance="@style/TextAppearance.Theme.GPB.Body1"
                android:textColor="@color/primary_dark"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/text_item_title4"
                app:layout_constraintVertical_chainStyle="packed" />

            <ImageView
                android:layout_width="@dimen/dimen_small_icon_button"
                android:layout_height="@dimen/dimen_small_icon_button"
                android:src="@drawable/ic_baseline_close_24"
                app:layout_constraintBottom_toBottomOf="@id/text_item_subtitle4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/text_item_subtitle4"
                app:tint="@color/warning" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginBottom="@dimen/dimen_large"
        android:background="@drawable/dashed_line"
        app:layout_constraintBottom_toTopOf="@id/text_total"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/text_total"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_medium"
        android:layout_marginBottom="@dimen/dimen_large"
        android:text="@string/text_your_order_total"
        android:textAlignment="textStart"
        android:textAppearance="@style/TextAppearance.Theme.GPB.Headline"
        android:textColor="@color/primary_dark"
        app:layout_constraintBottom_toTopOf="@id/text_subtotal"
        app:layout_constraintEnd_toStartOf="@+id/text_total_val"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/text_total_val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dimen_medium"
        android:layout_marginBottom="@dimen/dimen_large"
        android:text="@string/text_total_price"
        android:textAppearance="@style/TextAppearance.Theme.GPB.Headline"
        android:textColor="@color/primary_dark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/text_total" />

    <TextView
        android:id="@+id/text_subtotal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/text_subtotal"
        android:textAlignment="textStart"
        android:textAppearance="@style/TextAppearance.Theme.GPB.Body1"
        android:textColor="@color/primary_dark"
        app:layout_constraintBottom_toTopOf="@id/text_shipping"
        app:layout_constraintEnd_toStartOf="@+id/text_subtotal_val"
        app:layout_constraintStart_toStartOf="@+id/text_total" />

    <TextView
        android:id="@+id/text_subtotal_val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/text_subtotal_price"
        android:textAppearance="@style/TextAppearance.Theme.GPB.Body1"
        android:textColor="@color/primary_dark"
        app:layout_constraintEnd_toEndOf="@+id/text_total_val"
        app:layout_constraintTop_toTopOf="@+id/text_subtotal" />

    <TextView
        android:id="@+id/text_shipping"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/text_shipping"
        android:textAlignment="textStart"
        android:textAppearance="@style/TextAppearance.Theme.GPB.Body1"
        android:textColor="@color/primary_dark"
        app:layout_constraintBottom_toTopOf="@id/text_tax"
        app:layout_constraintEnd_toStartOf="@+id/text_shipping_val"
        app:layout_constraintStart_toStartOf="@+id/text_total" />

    <TextView
        android:id="@+id/text_shipping_val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/text_shipping_price"
        android:textAppearance="@style/TextAppearance.Theme.GPB.Body1"
        android:textColor="@color/primary_dark"
        app:layout_constraintEnd_toEndOf="@+id/text_total_val"
        app:layout_constraintTop_toTopOf="@+id/text_shipping" />

    <TextView
        android:id="@+id/text_tax"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="@string/text_tax"
        android:textAlignment="textStart"
        android:textAppearance="@style/TextAppearance.Theme.GPB.Body1"
        android:textColor="@color/primary_dark"
        app:layout_constraintBottom_toTopOf="@id/btn_pay"
        app:layout_constraintEnd_toStartOf="@+id/text_tax_val"
        app:layout_constraintStart_toStartOf="@+id/text_total" />

    <TextView
        android:id="@+id/text_tax_val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="@string/text_tax_price"
        android:textAppearance="@style/TextAppearance.Theme.GPB.Body1"
        android:textColor="@color/primary_dark"
        app:layout_constraintEnd_toEndOf="@+id/text_total_val"
        app:layout_constraintTop_toTopOf="@+id/text_tax" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/btn_pay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_medium"
        android:text="@string/button_pay_now"
        android:textColor="@color/white"
        app:backgroundTint="@color/primary_dark"
        app:icon="@drawable/ic_baseline_account_balance_wallet_24"
        app:iconTint="@color/icon_tint"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:textAllCaps="false" />

</androidx.constraintlayout.widget.ConstraintLayout>
