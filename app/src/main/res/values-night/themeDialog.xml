<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="myDialogStyle" parent="Theme.ViewResources">
    <item name="android:textColor">@color/gray_light</item>
    <item name="textInputStyle">@style/myTextInputDialog</item>

</style>
    <style name="myTextInputDialog" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="font">@font/roboto_regular</item>
        <item name="helperTextTextColor">@color/gray_light</item>
        <item name="android:textColorHint">@color/gray_light</item>
        <item name="android:textColor">@color/gray_light</item>
        <item name="helperTextTextAppearance">@style/body3</item>
    </style>
    <style name="myDialog_resetPassword" parent="myDialogStyle">
        <item name="android:textColor">@color/gray_light</item>
    </style>
    <style name="myDialog_buttonDown" parent="Widget.MaterialComponents.Button.Icon">
        <item name="android:textColor">@color/black_gray</item>
        <item name="backgroundTint">@color/blue_bright</item>
    </style>
    <style name="myDialog_buttonRegister" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/blue_bright</item>
    </style>
</resources>