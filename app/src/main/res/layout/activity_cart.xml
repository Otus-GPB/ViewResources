<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="16dp"
    android:layout_marginTop="16dp"
    android:layout_marginEnd="16dp"
    tools:context=".CartActivity">

    <TextView
        android:textColor="?attr/cartHeaderCountColor"
        android:id="@+id/text_count_items"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_4_items_in_your_card"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@id/divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_count_items">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/image1"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginTop="12dp"
                android:scaleType="centerCrop"
                android:src="@drawable/raspberry"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSizeImage" />

            <TextView
                android:id="@+id/text_1_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@string/on_the_top"
                android:textColor="?attr/mainColor"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@id/text_1_2"
                app:layout_constraintStart_toEndOf="@id/image1"
                app:layout_constraintTop_toTopOf="@id/image1"
                app:layout_constraintVertical_chainStyle="packed" />

            <TextView
                android:id="@+id/text_1_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@string/caption"
                android:textColor="?attr/mainColor"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@id/image1"
                app:layout_constraintStart_toEndOf="@id/image1"
                app:layout_constraintTop_toBottomOf="@id/text_1_1" />

            <TextView
                android:id="@+id/text_1_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@string/us_1_50"
                android:textColor="?attr/mainColor"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/text_1_1"
                app:layout_constraintVertical_chainStyle="packed" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/ic_close"
                app:layout_constraintBottom_toBottomOf="@id/text_1_2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/text_1_2"
                app:tint="?attr/cartDeleteItemColor" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/image2"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginTop="32dp"
                android:src="@drawable/klubnika"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/image1"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSizeImage" />

            <TextView
                android:id="@+id/text_2_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@string/forever_friends"
                android:textColor="?attr/mainColor"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@id/text_2_2"
                app:layout_constraintStart_toEndOf="@id/image2"
                app:layout_constraintTop_toTopOf="@id/image2"
                app:layout_constraintVertical_chainStyle="packed" />

            <TextView
                android:id="@+id/text_2_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@string/caption"
                android:textColor="?attr/mainColor"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@id/image2"
                app:layout_constraintStart_toEndOf="@id/image2"
                app:layout_constraintTop_toBottomOf="@id/text_2_1" />

            <TextView
                android:id="@+id/text_2_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@string/us_4_50"
                android:textColor="?attr/mainColor"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/text_2_1"
                app:layout_constraintVertical_chainStyle="packed" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/ic_close"
                app:layout_constraintBottom_toBottomOf="@id/text_2_2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/text_2_2"
                app:tint="?attr/cartDeleteItemColor" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/image3"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginTop="32dp"
                android:scaleType="centerCrop"
                android:src="@drawable/clock"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/image2"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSizeImage" />

            <TextView
                android:id="@+id/text_3_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@string/prototyping_kit"
                android:textColor="?attr/mainColor"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@id/text_3_2"
                app:layout_constraintStart_toEndOf="@id/image3"
                app:layout_constraintTop_toTopOf="@id/image3"
                app:layout_constraintVertical_chainStyle="packed" />

            <TextView
                android:id="@+id/text_3_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@string/caption"
                android:textColor="?attr/mainColor"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@id/image3"
                app:layout_constraintStart_toEndOf="@id/image3"
                app:layout_constraintTop_toBottomOf="@id/text_3_1" />

            <TextView
                android:id="@+id/text_3_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@string/us_8_00"
                android:textColor="?attr/mainColor"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/text_3_1"
                app:layout_constraintVertical_chainStyle="packed" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/ic_close"
                app:layout_constraintBottom_toBottomOf="@id/text_3_2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/text_3_2"
                app:tint="?attr/cartDeleteItemColor" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/image4"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginTop="32dp"
                android:scaleType="centerCrop"
                android:src="@drawable/maxresdefault"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/image3"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSizeImage" />

            <TextView
                android:id="@+id/text_4_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@string/basket_amp_coffee"
                android:textColor="?attr/mainColor"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@id/text_4_2"
                app:layout_constraintStart_toEndOf="@id/image4"
                app:layout_constraintTop_toTopOf="@id/image4"
                app:layout_constraintVertical_chainStyle="packed" />

            <TextView
                android:id="@+id/text_4_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@string/caption"
                android:textColor="?attr/mainColor"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@id/image4"
                app:layout_constraintStart_toEndOf="@id/image4"
                app:layout_constraintTop_toBottomOf="@id/text_4_1" />

            <TextView
                android:id="@+id/text_4_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@string/us_22_00"
                android:textColor="?attr/mainColor"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/text_4_1"
                app:layout_constraintVertical_chainStyle="packed" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/ic_close"
                app:layout_constraintBottom_toBottomOf="@id/text_4_2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/text_4_2"
                app:tint="?attr/cartDeleteItemColor" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/divider_line"
        app:layout_constraintBottom_toTopOf="@id/text_total"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/text_tax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="@string/tax"
        android:textColor="?attr/mainColor"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/btn_pay"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/text_tax_val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="@string/_3_50"
        android:textColor="?attr/mainColor"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/btn_pay"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/text_shipping"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/shipping"
        android:textColor="?attr/mainColor"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/text_tax"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/text_shipping_val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/_2_00"
        android:textColor="?attr/mainColor"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/text_tax_val"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/text_subtotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/subtotal"
        android:textColor="?attr/mainColor"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/text_shipping"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/text_subtotal_val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/_36_00"
        android:textColor="?attr/mainColor"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/text_shipping_val"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/text_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="@string/your_order_total"
        android:textColor="?attr/cartCheckHeaderColor"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/text_subtotal"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/text_total_val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="@string/_41_24"
        android:textColor="?attr/cartCheckHeaderColor"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/text_subtotal_val"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/btn_pay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="?attr/cartButtonColor"
        android:text="@string/btn_pay"
        android:textColor="?attr/backgroundColor"
        app:icon="@drawable/ic_cash_multiple"
        app:iconTint="?attr/cartButtonIconColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:textAllCaps="false" />

</androidx.constraintlayout.widget.ConstraintLayout>