<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="280dp"
    android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_view_sign_in"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_large"
            android:layout_marginTop="18dp"
            android:textAlignment="textStart"
            android:text="@string/text_sign_in"
            android:textAppearance="@style/TextAppearance.Theme.GPB.Headline"
            android:textColor="@color/primary_dark"
            app:layout_constraintEnd_toStartOf="@+id/text_view_register"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_view_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dimen_large"
            android:text="@string/text_register"
            android:textColor="@color/primary_blue"
            android:textAppearance="@style/TextAppearance.Theme.GPB.Button"
            app:layout_constraintBottom_toBottomOf="@id/text_view_sign_in"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/text_view_sign_in"
            app:textAllCaps="true" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_field_email"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_large"
        android:layout_marginHorizontal="@dimen/dimen_medium"
        android:hint="@string/hint_email"
        app:boxCornerRadiusTopEnd="@dimen/dimen_round_corners"
        app:boxCornerRadiusTopStart="@dimen/dimen_round_corners"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_sign_in">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_field_password"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_medium"
        android:layout_marginTop="@dimen/dimen_small"
        android:hint="@string/hint_password"
        app:boxCornerRadiusTopEnd="@dimen/dimen_round_corners"
        app:boxCornerRadiusTopStart="@dimen/dimen_round_corners"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_field_email">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textPassword" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/text_view_reset_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_medium"
        android:layout_marginBottom="@dimen/dimen_medium"
        android:text="@string/text_reset_password"
        android:textColor="@color/primary_blue"
        app:layout_constraintBottom_toTopOf="@+id/button_sign_in"
        app:layout_constraintEnd_toEndOf="@+id/input_field_password"
        app:layout_constraintTop_toBottomOf="@+id/input_field_password" />

    <Button
        android:id="@+id/button_sign_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_medium"
        android:backgroundTint="@color/primary_blue"
        android:text="@string/button_sign_in"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
