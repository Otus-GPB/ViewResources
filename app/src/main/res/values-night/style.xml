<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="ContactButtons" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/primary_color</item>
    </style>

    <style name="PayNowButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/secondary_color</item>
        <item name="iconTint">@color/black</item>
    </style>

    <style name="CancelImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:tint">@color/light_gray</item>
    </style>

    <style name="CartItemsTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/secondary_color</item>
    </style>

    <style name="OrderTotalTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/gray_yellow</item>
    </style>

    <style name="MainColorTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="hintTextColor">@color/white</item>
    </style>

    <style name="ResetPassButton" parent="Widget.MaterialComponents.Button.TextButton" >
        <item name="android:textColor">@color/light_gray</item>
    </style>
</resources>