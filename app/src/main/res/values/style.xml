<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ContactButtons" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/secondary_color</item>
    </style>

    <style name="PayNowButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/main_color</item>
        <item name="iconTint">@color/light_gray</item>
    </style>

    <style name="CancelImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:tint">@color/red</item>
    </style>

    <style name="CartItemsTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="OrderTotalTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MainColorTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/light_gray</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="hintTextColor">@color/black</item>
    </style>

    <style name="ResetPassButton" parent="Widget.MaterialComponents.Button.TextButton" >
        <item name="android:textColor">@color/blue</item>
    </style>

</resources>