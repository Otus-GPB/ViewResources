<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ViewResources" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">?attr/primaryColor</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="backgroundColor">@color/white</item>
        <item name="mainColor">@color/blue_oxford</item>
        <item name="accentColor">@color/red_cinnabar</item>
        <item name="primaryColor">@color/blue_pelorous</item>
        <item name="secondaryColor">@color/green_shamrock</item>
        <item name="tretiaryColor">@color/orange_dark_tangerine</item>
        <item name="iconColor">@color/grey_shady_lady</item>
        <item name="shadeColor">@color/white_smoke</item>

        <item name="actionbarIconColor">?attr/backgroundColor</item>
        <!-- contacts activity -->
        <item name="contactsButtonColor">?attr/secondaryColor</item>
        <!-- cart activity -->
        <item name="cartButtonColor">?attr/mainColor</item>
        <item name="cartButtonIconColor">?attr/iconColor</item>
        <item name="cartCheckHeaderColor">?attr/mainColor</item>
        <item name="cartDeleteItemColor">?attr/accentColor</item>
        <item name="cartHeaderCountColor">?attr/mainColor</item>
        <!-- cart activity -->
        <item name="signResetColor">?attr/primaryColor</item>
    </style>

    <style name="Theme.ViewResources1" parent="Theme.ViewResources">
        <!-- Customize your theme here. -->
        <item name="actionBarStyle">@style/ActionBarSecond</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSizeImage" parent="">
        <item name="cornerSize">5%</item>
    </style>

    <style name="ActionBarSecond" parent="Widget.MaterialComponents.ActionBar.Solid">
        <item name="background">?attr/primaryColor</item>
    </style>

    <style name="ContactsInput" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <!-- underline color in FilledBox style -->
        <item name="boxStrokeColor">?attr/mainColor</item>
        <item name="android:textColorHint">?attr/mainColor</item>
        <item name="android:textColor">?attr/mainColor</item>
        <item name="endIconTint">?attr/iconColor</item>
        <item name="boxCornerRadiusTopEnd">4dp</item>
        <item name="boxCornerRadiusTopStart">4dp</item>
    </style>

    <style name="ContactsInputDrop" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu">
        <!-- underline color in FilledBox style -->
        <item name="boxStrokeColor">?attr/mainColor</item>
        <item name="android:textColorHint">?attr/mainColor</item>
        <item name="android:textColor">?attr/mainColor</item>
        <item name="endIconTint">?attr/iconColor</item>
        <item name="boxCornerRadiusTopEnd">4dp</item>
        <item name="boxCornerRadiusTopStart">4dp</item>
    </style>
</resources>