<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CartActivity">

    <TextView
        android:id="@+id/cart_count_items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/count_items"
        android:textColor="?attr/colorOnSecondary"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@id/scrollView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/cart_view_line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cart_count_items">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <ImageView
                android:id="@+id/cart_cake_image"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginVertical="12dp"
                app:layout_constraintBottom_toTopOf="@id/cart_disks_image"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/cart_cake" />

            <TextView
                android:id="@+id/cart_title_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="8dp"
                android:text="@string/cart_tittle_1"
                android:textAlignment="textStart"
                android:textColor="?attr/colorOnSecondary"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@+id/cart_caption_1"
                app:layout_constraintEnd_toStartOf="@+id/cart_price_1"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintHorizontal_weight="4"
                app:layout_constraintStart_toEndOf="@+id/cart_cake_image"
                app:layout_constraintTop_toTopOf="@+id/cart_cake_image"
                app:layout_constraintVertical_bias="0.5"
                app:layout_constraintVertical_chainStyle="packed" />

            <TextView
                android:id="@+id/cart_price_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cart_price_1"
                android:textAlignment="textEnd"
                android:textColor="?attr/colorOnSecondary"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@+id/cart_close_1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toEndOf="@+id/cart_title_1"
                app:layout_constraintTop_toTopOf="@+id/cart_title_1"
                app:layout_constraintVertical_bias="0.5"
                app:layout_constraintVertical_chainStyle="packed" />

            <TextView
                android:id="@+id/cart_caption_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@string/cart_caption"
                android:textAlignment="textStart"
                android:textColor="?attr/colorOnSecondary"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/cart_cake_image"
                app:layout_constraintStart_toEndOf="@+id/cart_cake_image"
                app:layout_constraintTop_toBottomOf="@+id/cart_title_1"
                app:layout_constraintVertical_bias="0.5" />

            <ImageView
                android:id="@+id/cart_close_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@+id/cart_caption_1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cart_price_1"
                app:srcCompat="@drawable/ic_close"
                app:tint="?attr/errorColor" />

            <ImageView
                android:id="@+id/cart_disks_image"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginVertical="12dp"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toTopOf="@id/cart_alarm_clock_image"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cart_cake_image"
                app:srcCompat="@drawable/cart_disks" />

            <TextView
                android:id="@+id/cart_tittle_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="8dp"
                android:text="@string/cart_tittle_2"
                android:textAlignment="textStart"
                android:textColor="?attr/colorOnSecondary"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@+id/cart_caption_2"
                app:layout_constraintEnd_toStartOf="@+id/cart_price_2"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintHorizontal_weight="4"
                app:layout_constraintStart_toEndOf="@+id/cart_disks_image"
                app:layout_constraintTop_toTopOf="@+id/cart_disks_image"
                app:layout_constraintVertical_chainStyle="packed" />

            <TextView
                android:id="@+id/cart_price_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cart_price_2"
                android:textAlignment="textEnd"
                android:textColor="?attr/colorOnSecondary"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@+id/cart_close_2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toEndOf="@+id/cart_tittle_2"
                app:layout_constraintTop_toTopOf="@+id/cart_tittle_2"
                app:layout_constraintVertical_chainStyle="spread" />

            <TextView
                android:id="@+id/cart_caption_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@string/cart_caption"
                android:textAlignment="textStart"
                android:textColor="?attr/colorOnSecondary"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/cart_disks_image"
                app:layout_constraintStart_toEndOf="@+id/cart_disks_image"
                app:layout_constraintTop_toBottomOf="@+id/cart_tittle_2"
                app:layout_constraintVertical_bias="0.5" />

            <ImageView
                android:id="@+id/cart_close_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@+id/cart_caption_2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cart_price_2"
                app:srcCompat="@drawable/ic_close"
                app:tint="?attr/errorColor"/>

            <ImageView
                android:id="@+id/cart_alarm_clock_image"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginVertical="12dp"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toTopOf="@id/cart_cactus_image"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cart_disks_image"
                app:srcCompat="@drawable/cart_alarm_clock" />

            <TextView
                android:id="@+id/cart_tittle_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="8dp"
                android:text="@string/cart_tittle_3"
                android:textAlignment="textStart"
                android:textColor="?attr/colorOnSecondary"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@+id/cart_caption_3"
                app:layout_constraintEnd_toStartOf="@+id/cart_price_3"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintHorizontal_weight="4"
                app:layout_constraintStart_toEndOf="@+id/cart_alarm_clock_image"
                app:layout_constraintTop_toTopOf="@+id/cart_alarm_clock_image"
                app:layout_constraintVertical_chainStyle="packed" />

            <TextView
                android:id="@+id/cart_price_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cart_price_3"
                android:textAlignment="textEnd"
                android:textColor="?attr/colorOnSecondary"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@+id/cart_close_3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toEndOf="@+id/cart_tittle_3"
                app:layout_constraintTop_toTopOf="@+id/cart_tittle_3"
                app:layout_constraintVertical_chainStyle="spread" />

            <TextView
                android:id="@+id/cart_caption_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@string/cart_caption"
                android:textAlignment="textStart"
                android:textColor="?attr/colorOnSecondary"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/cart_alarm_clock_image"
                app:layout_constraintStart_toEndOf="@+id/cart_alarm_clock_image"
                app:layout_constraintTop_toBottomOf="@+id/cart_tittle_3"
                app:layout_constraintVertical_bias="0.5" />

            <ImageView
                android:id="@+id/cart_close_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@+id/cart_caption_3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cart_price_3"
                app:srcCompat="@drawable/ic_close"
                app:tint="?attr/errorColor"/>

            <ImageView
                android:id="@+id/cart_cactus_image"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="4dp"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cart_alarm_clock_image"
                app:srcCompat="@drawable/cart_cactus" />

            <TextView
                android:id="@+id/cart_tittle_4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="8dp"
                android:text="@string/cart_tittle_4"
                android:textAlignment="textStart"
                android:textColor="?attr/colorOnSecondary"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@+id/cart_caption_4"
                app:layout_constraintEnd_toStartOf="@+id/cart_price_4"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintHorizontal_weight="4"
                app:layout_constraintStart_toEndOf="@+id/cart_cactus_image"
                app:layout_constraintTop_toTopOf="@+id/cart_cactus_image"
                app:layout_constraintVertical_chainStyle="packed" />

            <TextView
                android:id="@+id/cart_price_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cart_price_4"
                android:textAlignment="textEnd"
                android:textColor="?attr/colorOnSecondary"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@+id/cart_close_4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toEndOf="@+id/cart_tittle_4"
                app:layout_constraintTop_toTopOf="@+id/cart_tittle_4"
                app:layout_constraintVertical_chainStyle="spread" />

            <TextView
                android:id="@+id/cart_caption_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@string/cart_caption"
                android:textAlignment="textStart"
                android:textColor="?attr/colorOnSecondary"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/cart_cactus_image"
                app:layout_constraintStart_toEndOf="@+id/cart_cactus_image"
                app:layout_constraintTop_toBottomOf="@+id/cart_tittle_4"
                app:layout_constraintVertical_bias="0.5" />

            <ImageView
                android:id="@+id/cart_close_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@+id/cart_caption_4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cart_price_4"
                app:srcCompat="@drawable/ic_close"
                app:tint="?attr/errorColor"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <View
        android:id="@+id/cart_view_line"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/line"
        android:layerType="software"
        app:layout_constraintBottom_toTopOf="@id/cart_order_tittle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/scrollView2" />

    <TextView
        android:id="@+id/cart_order_tittle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:text="@string/cart_order_tittle"
        android:textAlignment="textStart"
        android:textColor="?attr/colorOnSecondary"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/cart_more_tittles"
        app:layout_constraintEnd_toStartOf="@id/cart_total_price"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cart_view_line"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/cart_total_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="@string/cart_total_price"
        android:textAlignment="textEnd"
        android:textColor="?attr/colorOnSecondary"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/cart_more_price"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@id/cart_order_tittle"
        app:layout_constraintTop_toTopOf="@+id/cart_order_tittle"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/cart_more_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="@string/cart_more_price"
        android:textAlignment="textEnd"
        android:textColor="?attr/colorOnSecondary"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/cart_more_tittles"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/cart_more_tittles"
        app:layout_constraintTop_toTopOf="@+id/cart_more_tittles" />

    <TextView
        android:id="@+id/cart_more_tittles"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="24dp"
        android:text="@string/cart_more_tittles"
        android:textAlignment="textStart"
        android:textColor="?attr/colorOnSecondary"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/cart_btn_to_pay"
        app:layout_constraintEnd_toStartOf="@+id/cart_more_price"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintHorizontal_weight="3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cart_order_tittle"
        app:layout_constraintVertical_bias="0.5" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/cart_btn_to_pay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/black_gray"
        android:clickable="true"
        android:focusable="true"
        android:text="@string/cart_pay_now"
        android:textAllCaps="false"
        android:textColor="?attr/colorOnPrimary"
        android:textSize="20sp"
        app:icon="@drawable/ic_wallet"
        app:iconTint="?attr/iconColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>