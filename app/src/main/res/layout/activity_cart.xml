<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CartActivity">

    <TextView
        android:textColor="?attr/cartItemsColor"
        android:id="@+id/countItems"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:text="@string/_4_items_in_your_cart"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@id/fixBikeItem"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/fixBikeItem"
        layout="@layout/item_cart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/countItems" />

    <include
        android:id="@+id/skateItem"
        layout="@layout/item_cart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fixBikeItem" />

    <include
        android:id="@+id/rollersItem"
        layout="@layout/item_cart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/skateItem" />

    <include
        android:id="@+id/kickScooterItem"
        layout="@layout/item_cart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rollersItem" />

    <ImageView
        android:id="@+id/dottedImageView"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginTop="52dp"
        android:src="@drawable/dotted"
        app:layout_constraintBottom_toTopOf="@id/orderTotalTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/kickScooterItem"
        tools:ignore="ContentDescription" />

    <TextView
        android:textColor="?attr/orderTotalColor"
        android:id="@+id/orderTotalTextView"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="@string/your_order_total"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/amountTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dottedImageView" />

    <TextView
        android:textColor="?attr/orderTotalColor"
        android:id="@+id/amountTextView"
        android:layout_width="72dp"
        android:layout_height="32dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:gravity="right"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/orderTotalTextView"
        app:layout_constraintTop_toTopOf="@id/orderTotalTextView"
        tools:ignore="RtlHardcoded"
        tools:text="TEST" />

    <TextView
        android:textColor="?attr/textColor"
        android:id="@+id/orderDetailTextView"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:layout_marginStart="16sp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/orderCountTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/orderTotalTextView"
        tools:text="TEXT" />

    <TextView
        android:textColor="?attr/textColor"
        android:id="@+id/orderCountTextView"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginTop="16dp"
        android:gravity="right"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/amountTextView"
        app:layout_constraintTop_toBottomOf="@+id/amountTextView"
        tools:ignore="RtlHardcoded"
        tools:text="096.24" />

    <com.google.android.material.button.MaterialButton
        style="@style/PayButton"
        android:textColor="?attr/payButtonTextColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"
        android:paddingTop="14dp"
        android:paddingEnd="16dp"
        android:paddingBottom="14dp"
        android:text="@string/pay_now"
        android:textAllCaps="false"
        android:textSize="20sp"
        app:cornerRadius="999dp"
        app:icon="@drawable/ic_wallet"
        app:iconPadding="11dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="RtlSymmetry" />


</androidx.constraintlayout.widget.ConstraintLayout>