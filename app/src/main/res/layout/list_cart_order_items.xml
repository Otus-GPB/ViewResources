<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<ImageView
    android:id="@+id/image_order"
    android:layout_width="48dp"
    android:layout_height="48dp"
    android:layout_marginVertical="16dp"
    android:layout_marginEnd="16dp"
    tools:src="@drawable/cart_imgproduct_1"
    android:scaleType="fitCenter"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toStartOf="@id/name_order"
    app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/name_order"
        android:layout_width="0dp"
        android:layout_height="24dp"
        tools:text="Name product"
        style="@style/adapter_cart"
        android:layout_marginEnd="8dp"
        android:lineSpacingExtra="5sp"
        android:gravity="center_vertical"
        app:layout_constraintStart_toEndOf="@id/image_order"
        app:layout_constraintEnd_toStartOf="@id/cost_order"
        app:layout_constraintTop_toTopOf="@id/image_order"
        />

    <TextView
        android:id="@+id/cost_order"
        style="@style/adapter_cart"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:gravity="end|top"
        android:lineSpacingExtra="5sp"
        android:translationY="-2.62sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/name_order"
        app:layout_constraintTop_toTopOf="@id/name_order"
        tools:text="$US 65" />

    <TextView
        android:id="@+id/name_about"
        android:layout_width="0dp"
        android:layout_height="16dp"
        tools:text="about product"
        style="@style/adapter_cartAbout"
        android:lineSpacingExtra="2sp"
        android:gravity="center_vertical"
        app:layout_constraintStart_toStartOf="@id/name_order"
        app:layout_constraintEnd_toEndOf="@id/name_order"
        app:layout_constraintTop_toBottomOf="@id/name_order"/>
    <ImageView
        android:id="@+id/order_del"
        android:clickable="true"
        android:focusable="true"
        android:layout_width="9.33dp"
        android:layout_height="9.33dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/cart_icon_delete"
        app:layout_constraintEnd_toEndOf="@id/cost_order"
        app:layout_constraintTop_toBottomOf="@id/cost_order"/>
</androidx.constraintlayout.widget.ConstraintLayout>