<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ViewResources" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="MyThemeContact" parent="Theme.ViewResources">
        <item name="colorPrimary">@color/background_contacts</item>
        <item name="colorPrimaryVariant">@color/background_contacts</item>
        <item name="toolbarStyle">@style/myToolbar</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="textInputStyle">@style/myTextInput</item>
    </style>

    <style name="myToolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:titleTextAppearance">@style/contact_toolbar</item>
        <item name="titleTextColor">@color/white</item>
        <item name="android:statusBarColor">@color/background_contacts</item>
    </style>

    <style name="myTextInput" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="font">@font/roboto_regular</item>
        <item name="boxBackgroundColor">@color/contacts_editTextLayoutField</item>
        <item name="endIconTint">@color/icon_contacts</item>
        <item name="helperTextTextColor">@color/background_contacts</item>
        <item name="hintTextColor">@color/background_contacts</item>
    </style>

    <style name="myTextExposedDropdownMenu" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu">
        <item name="font">@font/roboto_regular</item>
        <item name="boxBackgroundColor">@color/contacts_editTextLayoutField</item>
    </style>

    <style name="myButtonStyle" parent="Widget.MaterialComponents.Button.Icon">
        <item name="backgroundTint">@color/contacts_buttonReg</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="myThemeCart" parent="MyThemeContact">
        <item name="android:textColor">@color/dark_color</item>
    </style>
    <style name="myThemeCartOrderTotalText" parent="myThemeCart">
        <item name="android:textColor">@color/dark_color</item>
    </style>
    <style name="myThemeCartCart_itemsIncart" parent="myThemeCart">
        <item name="android:textColor">@color/dark_color</item>
    </style>
    <style name="myThemeCartCart_imageDelete" parent="myThemeCart">
        <item name="colorControlNormal">@color/cart_icon_delete</item>
    </style>
    <style name="myButtonStyleCart" parent="Widget.MaterialComponents.ExtendedFloatingActionButton.Icon">
        <item name="backgroundTint">@color/dark_color</item>
        <item name="android:textColor">@color/white</item>
        <item name="iconTint">@color/icon_gray</item>
    </style>

    <style name="myDialogStyle" parent="MyThemeContact">
        <item name="android:textColor">@color/dark_color</item>
        <item name="textInputStyle">@style/myTextInputDialog</item>

    </style>
    <style name="myTextInputDialog" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="font">@font/roboto_regular</item>
        <item name="helperTextTextColor">@color/dark_color</item>
        <item name="android:textColorHint">@color/dark_color</item>
        <item name="helperTextTextAppearance">@style/dialog_helptext</item>
    </style>
    <style name="myDialog_resetPassword" parent="myDialogStyle">
        <item name="android:textColor">@color/dialogRegister_anotherColor</item>
    </style>
    <style name="myDialog_buttonDown" parent="Widget.MaterialComponents.Button.Icon">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/dialogRegister_buttonDown</item>
    </style>
    <style name="myDialog_buttonRegister" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/dialogRegister_anotherColor</item>
    </style>
</resources>