<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ViewResources" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_300</item>
        <item name="colorPrimaryVariant">@color/blue_300</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/yellow_green_400</item>
        <item name="colorSecondaryVariant">@color/yellow_green_400</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorSurface</item>
        <!-- Customize your theme here. -->
        <item name="toolBarIconColor">@color/gray_600</item>
        <item name="cartToolBarColor">?attr/colorPrimarySurface</item>
        <item name="cartPayButtonIconColor">@color/black</item>
        <item name="cartOrderTotalColor">@color/orange_200</item>
        <item name="cartCaptionTextColor">@color/white</item>
        <item name="dialogResetPasswordColor">?attr/colorOnSurface</item>
        <item name="deleteIconColor">@color/gray_600</item>
    </style>

</resources>